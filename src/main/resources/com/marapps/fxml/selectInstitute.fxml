<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<GridPane alignment="center" hgap="10" vgap="10"
          xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.marapps.controllers.SelectInstituteController">
    <padding><Insets bottom="10" left="25" right="25" top="25" /></padding>

    <TextField fx:id="searchField"
               GridPane.rowIndex="0" GridPane.columnIndex="0"/>

    <Button text="Search"
            GridPane.rowIndex="0" GridPane.columnIndex="1"
            onAction="#searchPressed"/>

    <ListView fx:id="listView" maxWidth="620" prefWidth="400"
              GridPane.rowIndex="1" GridPane.columnIndex="0"/>

    <VBox alignment="TOP_CENTER"
          GridPane.rowIndex="1" GridPane.columnIndex="1">
        <Button text="Select" fx:id="selectButton"
                onAction="#selectPressed"/>
    </VBox>

</GridPane>
