<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:controller="com.marapps.controllers.LoginController" xmlns:fx="http://javafx.com/fxml"
          alignment="center" hgap="10" vgap="15" minHeight="300">
    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
<!--    <gridLinesVisible>true</gridLinesVisible>-->

    <Label text="Username:" minWidth="80"
           GridPane.rowIndex="1" GridPane.columnIndex="0"/>

    <TextField fx:id="userField"
               GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Password:"
           GridPane.rowIndex="2" GridPane.columnIndex="0"/>

    <PasswordField fx:id="passwordField"
                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Institute:"
           GridPane.rowIndex="3" GridPane.columnIndex="0"/>

    <HBox alignment="CENTER" maxWidth="200"
          GridPane.rowIndex="3" GridPane.columnIndex="1">
        <Button text="Select Institute" fx:id="instituteButton"
                onAction="#selectInstitute"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_RIGHT"
          GridPane.rowIndex="5" GridPane.columnIndex="1">

        <Button text="Log in"
                onAction="#handleSubmitButtonAction"/>

    </HBox>
    <HBox spacing="10" alignment="CENTER_RIGHT"
          GridPane.rowIndex="6" GridPane.columnIndex="1">

        <Label
            text="Stay logged in"/>

        <CheckBox
                fx:id="stayLoggedInCheck"/>
    </HBox>


</GridPane>